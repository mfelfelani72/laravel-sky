{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "mfelfelani72/laravel-sky",
  "description": "My Laravel starter template",
  "type": "project",
  "keywords": [
    "laravel",
    "framework"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0",
    "laravel/tinker": "^2.10.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.24",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "phpunit/phpunit": "^11.5.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/app/",
      "Database\\Factories\\": "src/database/factories/",
      "Database\\Seeders\\": "src/database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "src/tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php scripts/setup.php"
    ],
    "setup": [
      "composer install",
      "@php -r \"file_exists('src/.env') || copy('src/.env.example', 'src/.env');\"",
      "@php src/artisan key:generate",
      "@php src/artisan migrate --force",
      "npm install",
      "npm run build"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php src/artisan serve\" \"php src/artisan queue:listen --tries=1\" \"php src/artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
    ],
    "test": [
      "@php src/artisan config:clear --ansi",
      "@php src/artisan test"
    ],
    "post-autoload-dump": [
      "@php src/artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php src/artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('src/.env') || copy('src/.env.example', 'src/.env');\""
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "vendor-dir": "src/vendor",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
